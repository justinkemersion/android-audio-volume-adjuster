<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/toggle_boost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enable_boost"
        android:contentDescription="@string/cd_toggle_boost" />

    <TextView
        android:id="@+id/boost_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="" />

    <SeekBar
        android:id="@+id/boost_fader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/cd_boost_fader"
        android:max="100" />

    <TextView
        android:id="@+id/quietness_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="" />

    <SeekBar
        android:id="@+id/quietness_fader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/cd_quietness_fader"
        android:max="100" />

</LinearLayout>